@model Inmobiliaria_.Net_Core.Models.Inmueble

</br></br>
    <h2 style="color:white">@ViewData["Title"]</h2>
    <div class="row">
        <div class="col-md-4"> </div>
        
        <div class="col-md-4">

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <table style="color:#ffcc00;font-weight:bold">
                    <tr height="50">
                        <th><label asp-for="IdInmueble" class="control-label"></label></th>
                        <th>
                            <input asp-for="IdInmueble" class="form-control" readonly />
                            <span asp-validation-for="IdInmueble" class="text-danger"></span>
                        </th>
                    </tr>
                    <tr height="50">
                        <th>  <label asp-for="Direccion" class="control-label"></label></th>
                        <th>
                            <input asp-for="Direccion" class="form-control" />
                            <span asp-validation-for="Direccion" class="text-danger"></span>
                        </th>
                    </tr>
                    <tr height="50">
                        <th> <label asp-for="Ambientes" class="control-label"></label></th>
                        <th>
                            <input asp-for="Ambientes" class="form-control" />
                            <span asp-validation-for="Ambientes" class="text-danger"></span>
                        </th>
                    </tr>
                    <tr height="50">
                        <th> <label asp-for="Tipo" class="control-label"></label></th>
                        <th>
                            <input asp-for="Tipo" class="form-control" />
                            <span asp-validation-for="Tipo" class="text-danger"></span>
                        </th>
                    </tr>
                    <tr height="50">
                        <th><label asp-for="Uso" class="control-label"></label></th>
                        <th>
                            <input asp-for="Uso" class="form-control" />
                            <span asp-validation-for="Uso" class="text-danger"></span>
                        </th>
                    </tr>
                    <tr height="50">
                        <th>  <label asp-for="Precio" class="control-label"></label></th>
                        <th>
                            <input asp-for="Precio" class="form-control" />
                            <span asp-validation-for="Precio" class="text-danger"></span>
                        </th>
                    </tr>
                    <tr height="50">
                        <th><label asp-for="Disponible" class="control-label"></label></th>
                        <th>
                            <select asp-for="Disponible" class="form-control">
                                <option value=0>No</option>
                                <option value=1>Si</option>
                            </select>
                            <span asp-validation-for="Disponible" class="text-danger"></span>
                        </th>
                    </tr>
                    <tr height="50">
                        <th> <label class="control-label">Propietario</label></th>
                        <th>
                            <select class="form-control" name="IdPropietario">
                                @foreach (var item in (IList<Propietario>)ViewBag.Propietarios)
                                {
                                    @:<option @(item.IdPropietario == Model.IdPropietario ? "selected" : "") value="@item.IdPropietario">@(item.Nombre + " " + item.Apellido)</option>
                                }
                            </select>
                            <span asp-validation-for="IdPropietario" class="text-danger"></span>
                        </th>
                    </tr>
                    <tr height="50">
                        <th colspan="2">
                            &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp
                            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>

                            <input type="submit" value="Cambiar" style="font-weight:bold; border:groove" class="btn btn-warning" />
                        </th>

                    </tr>
                </table>

            </form>
        </div>
        <div class="col-md-4"> </div>
    </div>

