@model Inmobiliaria_.Net_Core.Models.Inmueble

<div style="background-color:whitesmoke; margin-top:10%">
    <h4>@ViewData["Title"]</h4>
    <p>
        <a asp-action="Create" style="font-weight:bold">Agregar nuevo Inmueble</a>
    </p>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Direccion" class="form-control" placeholder="Dirección" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Ambientes" class="form-control" placeholder="Cantidad de ambientes" />
                    <span asp-validation-for="Ambientes" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Tipo" class="form-control" placeholder="Tipo de inmueble" />
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Uso" class="form-control" placeholder="Uso permitido" />
                    <span asp-validation-for="Uso" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Precio" class="form-control" placeholder="Precio" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Disponible" class="control-label"></label>
                    <select asp-for="Disponible" class="form-control">
                        <option value=0>-</option>
                        <option value=1 selected>Si</option>
                    </select>
                    <span asp-validation-for="Disponible" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Propietario</label>
                    <select class="form-control" name="IdPropietario">
                        @foreach (var item in (IList<Propietario>)ViewBag.Propietarios)
                        {
                            <option value="@item.IdPropietario">@(item.Nombre + " " + item.Apellido)</option>
                        }
                    </select>
                    <span asp-validation-for="IdPropietario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    <input type="submit" value="Guardar" style="font-weight:bold; border:groove" class="btn btn-warning" />
                </div>
            </form>
        </div>
    </div>
</div>