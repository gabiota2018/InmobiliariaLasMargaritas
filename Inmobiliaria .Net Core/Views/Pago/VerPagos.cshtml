@model IEnumerable<Inmobiliaria_.Net_Core.Models.Pago>
    

    <div style="background-color:whitesmoke; margin-top:10%">
        <h4>@ViewData["Title"]</h4>
        <p>
            <a asp-action="Create" style="font-weight:bold">Registrar Pago</a>
       </p>
        <table class="table" border="solid 1px grey">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.IdPago)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NroPago)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IdAlquiler)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Fecha)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Importe)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdPago)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NroPago)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdAlquiler)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fecha)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Importe)
                        </td>
                        <td>
                            @*@Html.ActionLink("Create", "Registrar Pago", new { id = item.IdAlquiler })*@
                            @Html.ActionLink( "Anular","Delete", new { id = item.IdPago })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
