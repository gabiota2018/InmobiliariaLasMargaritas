@model Inmobiliaria_.Net_Core.Models.LoginView


    <div class="row">
        <div class="col-md-4">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Usuario" class="form-control" placeholder="Email"/>
                    <span asp-validation-for="Usuario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Clave" class="form-control" placeholder="Password"/>
                    <span asp-validation-for="Clave" class="text-danger"></span>
                </div>
                <div class="form-group">
                   <input type="submit" value="Ingresar" style="font-weight:bold; border:groove" class="btn btn-outline-success" />
                </div>
            </form>
         </div>
    </div>
   
