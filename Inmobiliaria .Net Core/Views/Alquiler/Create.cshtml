@model Inmobiliaria_.Net_Core.Models.Alquiler

<h4 style="color:white">@ViewData["Title"]</h4>
<div class="row" style="color:whitesmoke">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Inmueble</label>
                <select class="form-control" name="IdInmueble">
                    @foreach (var item in (IList<Inmueble>)ViewBag.Inmuebles)
                    {
                        <option value="@item.IdInmueble">@(item.Direccion + ": " + item.Tipo+ " para " + item.Uso+ " ($" + item.Precio+ " por mes)")</option>
                    }
                </select>
                <span asp-validation-for="IdInmueble" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Inquilino</label>
                <select class="form-control" name="IdInquilino">
                    @foreach (var item in (IList<Inquilino>)ViewBag.Inquilinos)
                    {
                        <option value="@item.IdInquilino">@(item.Nombre + " " + item.Apellido)</option>
                    }
                </select>
                <span asp-validation-for="IdInquilino" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" placeholder="Precio" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="Fecha_inicio" class="control-label"></label>
                <input asp-for="Fecha_inicio" type="date" class="form-control" />
                <span asp-validation-for="Fecha_inicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha_fin" class="control-label"></label>
                <input asp-for="Fecha_fin" type="date" class="form-control" />
                <span asp-validation-for="Fecha_fin" class="text-danger"></span>
            </div>

            <div class="form-group">
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                <input type="submit" value="Guardar" style="font-weight:bold; border:groove" class="btn btn-warning" />
            </div>
        </form>
        </div>
    </div>



